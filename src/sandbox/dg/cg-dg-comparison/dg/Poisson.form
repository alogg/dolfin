element = FiniteElement("Discontinuous Lagrange", "tetrahedron", 1)

v = TestFunction(element)
u = TrialFunction(element)
f = Function(element)

gamma = 24.0
alpha = 8.0

n = FacetNormal("tetrahedron")
h = MeshSize("tetrahedron")

def Jump(v):
  return [v*n[i] for i in range(element.cell_shape())]

#a = dot(grad(v), grad(u))*dx \
#   + alpha*avg(h)*dot(jump(v, n), jump(u, n))*dS \
#   + gamma*h*v*u*ds

a = dot(grad(v), grad(u))*dx \
   - dot(avg(grad(v)), jump(u, n))*dS \
   - dot(jump(v, n), avg(grad(u)))*dS \
   + alpha*avg(h)*dot(jump(v, n), jump(u, n))*dS \
   - dot(grad(v), Jump(u))*ds \
   - dot(Jump(v), grad(u))*ds \
   + gamma*h*v*u*ds

L = v*f*dx
